<p id="notice"><%= notice %></p>

<h1>Media Items</h1>

<div class="media-gallery">
  <div class="row" data-infinite-load>
    <% @media_items.each do |media_item| %>
      <div class="col-xs-4 col-sm-3 col-md-2">
        <div><%= media_item.id %></div>
        <% attachment_or_placeholder_url = media_item.attachment.exists? ? media_item.attachment.url(:medium) : 'https://placeholdit.imgix.net/~text?w=600&h=400' %>
        <%= link_to edit_media_item_path(media_item) do %>
          <%= image_tag attachment_or_placeholder_url, class: 'media-gallery-item img-rounded' %>
        <% end %>
      </div>
    <% end %>
    <%= link_to_next_page @media_items, 'Next page' %>
  </div>
</div>

<br>

<%= link_to 'New Media Item', new_media_item_path %>
