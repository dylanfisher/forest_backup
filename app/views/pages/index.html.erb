<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<%= paginate @pages %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= link_to 'ID', pages_path(by_id: (params[:by_id] == 'desc' ? :asc : :desc)) %></th>
        <th><%= link_to 'Title', pages_path(by_title: (params[:by_title] == 'asc' ? :desc : :asc)) %></th>
        <th><%= link_to 'Slug', pages_path(by_slug: (params[:by_slug] == 'asc' ? :desc : :asc)) %></th>
        <th>Description</th>
        <th><%= link_to 'Created&nbsp;at'.html_safe, pages_path(by_created_at: (params[:by_created_at] == 'desc' ? :asc : :desc)) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.id %></td>
          <td><%= page.title %></td>
          <td><%= page.slug %></td>
          <td><%= page.description %></td>
          <td><%= page.created_at.to_formatted_s(:short) %></td>
          <td width="1"><%= link_to 'Show', page, class: 'btn btn-xs btn-default', role: 'button' %></td>
          <td width="1"><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-xs btn-default', role: 'button' %></td>
          <td width="1"><%= link_to 'Destroy', page, method: :delete, class: 'btn btn-xs btn-default', role: 'button', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Page', new_page_path, class: 'btn btn-primary' %>
